name: vello_motorista
description: A new Flutter project.
publish_to: 'none'
version: 1.0.0+1

environment:
  sdk: '>=3.0.0 <4.0.0'

dependencies:
  flutter:
    sdk: flutter
  cupertino_icons: ^1.0.2
  
  # Firebase
  firebase_core: ^2.24.2
  firebase_auth: ^4.15.3
  firebase_messaging: ^14.7.10
  cloud_firestore: ^4.13.6
  firebase_storage: ^11.5.6
  
  # Notificações (substituto do awesome_notifications)
  flutter_local_notifications: ^16.3.2
  
  # QR Scanner (substituto do qr_code_scanner)
  mobile_scanner: ^3.5.6
  
  # Outras dependências comuns
  http: ^1.1.2
  shared_preferences: ^2.2.2
  geolocator: ^10.1.0
  permission_handler: ^11.2.0
  image_picker: ^1.0.7

dev_dependencies:
  flutter_test:
    sdk: flutter
  flutter_lints: ^2.0.0

flutter:
  uses-material-design: true
  
  assets:
    - assets/images/
